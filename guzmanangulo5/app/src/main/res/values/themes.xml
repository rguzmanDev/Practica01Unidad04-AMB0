<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Guzmanangulo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_purple</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>

    <style name="Theme.Guzmanangulo" parent="Base.Theme.Guzmanangulo" />

    <!-- Estilo personalizado para EditText -->
    <style name="EditTextStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Estilo personalizado para Button -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:shape">ring</item>
    </style>
</resources>
